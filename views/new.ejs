<% include ./partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Add New Photo</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form action="/photos" method="POST">
                <div class="form-group">
                    <label>Title: </label>
                    <input class="form-control" placeholder="Photo Title" name="photo[title]" />
                </div>
                <div class="form-group">
                    <label>Image: </label>
                    <input class="form-control" placeholder="Photo URL" name="photo[image]"/>
                </div>
                <div class="form-group">
                    <label>Description: </label>
                    <input class="form-control" placeholder="Description" name="photo[description]"/>
                </div>
                <input class="btn btn-success" type="submit">
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer%>