<% include ./partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Edit: <%= photo.title%></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form action="/photos/<%= photo._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Title: </label>
                    <input class="form-control" value="<%= photo.title%>" name="photo[title]" />
                </div>
                <div class="form-group">
                    <label>Image: </label>
                    <input class="form-control" value="<%= photo.image%>" name="photo[image]"/>
                </div>
                <div class="form-group">
                    <label>Description: </label>
                    <input class="form-control" placeholder="<%= photo.description%>" name="photo[description]"/>
                </div>
                <input class="btn btn-success" type="submit">
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer%>